<h2>Register</h2>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="form-group">
    <%= f.submit 'Register', class: 'btn' %>
  </div>
<% end %>
