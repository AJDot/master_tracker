<div class="container">
  <%= render 'shared/title', title: 'Create New Description' %>

  <%= form_for [@user, @description] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Description', class: 'btn' %>
    </div>
  <% end %>
</div>
