<h3>Create New Entry</h3>

<%= form_for @entry do |f| %>
  <div class="form-group">
    <%= f.label :category_name %>
    <%= f.select :category_name, Category.all.collect(&:name), {include_blank: true} %>
  </div>
  <div class="form-group">
    <%= f.label :skill_name %>
    <%= f.select :skill_name, Skill.all.collect(&:name), {include_blank: true} %>
  </div>
  <div class="form-group">
    <%= f.label :description_name %>
    <%= f.select :description_name, Description.all.collect(&:name), {include_blank: true} %>
  </div>
  <div class="form-group">
    <%= f.label :format_duration, "Duration" %>
    <%= f.text_field :format_duration, placeholder: "hh:mm" %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Entry', class: 'btn' %>
  </div>
<% end %>
