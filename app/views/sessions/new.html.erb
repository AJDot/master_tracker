<div class="container">
  <%= render 'shared/title', title: 'Login' %>

  <%= form_tag login_path do |f| %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Login', class: 'btn' %>
    </div>
  <% end %>
</div>
